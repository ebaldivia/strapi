{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Artigos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "resume": {
      "type": "text"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::article-category.article-category"
    },
    "is_highlight": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "is_public": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "richtext"
    },
    "votes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article-vote.article-vote",
      "mappedBy": "article"
    }
  }
}
